<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_marginStart="15dp"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="15dp"
    android:orientation="horizontal"
    android:background="@drawable/bot_nav_bar"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/ivBotTwo"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/duck_fight" />

    <View
        android:layout_width="3dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/ivBotThree"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/duck_love" />

    <View
        android:layout_width="3dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/ivBotFour"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/duck_exchange" />

    <View
        android:layout_width="3dp"
        android:layout_height="0dp" />

    <ImageView
        android:id="@+id/ivBotFive"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:background="@drawable/ganbate" />

</LinearLayout>
</layout>